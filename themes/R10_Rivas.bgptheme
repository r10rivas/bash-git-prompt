# This theme for gitprompt.sh is designed for dark color schemes
# it is clone of oh-my-zsh crunch theme style with exit status
# This is custom @r10ivas

override_git_prompt_colors() {
  if [ -e ~/.rvm/bin/rvm-prompt ]; then
    RUBY_PROMPT='$(~/.rvm/bin/rvm-prompt i v)'
  else
    if command -v rbenv > /dev/null; then
      RUBY_PROMPT='$(rbenv version | sed -e "s/ (set.*$//"))'
    fi
  fi
  Time12a="\$(date +%H:%M)"
  GIT_PROMPT_LEADING_SPACE="0"
  GIT_PROMPT_BRANCH="${BoldGreen}"
  GIT_PROMPT_THEME_NAME="R10_Rivas"
  GIT_PROMPT_STAGED="${Yellow}● "
  GIT_PROMPT_UNTRACKED="${Cyan}… "
  GIT_PROMPT_STASHED="${BoldMagenta}⚑ "
  GIT_PROMPT_CLEAN="${Green}✔ "
  GIT_PROMPT_COMMAND_OK="${Green}✔ "
  GIT_PROMPT_COMMAND_FAIL="${Red}✘ "

  KERNEL_PROMPT='‹$(uname -r)›'
  
  GIT_PROMPT_START_USER="_LAST_COMMAND_INDICATOR_${BoldCyan}${PathShort}"
  GIT_PROMPT_START_ROOT="${GIT_PROMPT_START_USER}"
  GIT_PROMPT_END_ROOT="${BoldRed} # ${ResetColor}"
  GIT_PROMPT_PREFIX="${BoldGreen}("
  GIT_PROMPT_SUFFIX="${BoldGreen})${BoldRed}(${BoldRed}$RUBY_PROMPT${BoldRed})"
  GIT_PROMPT_END_USER="\n${BoldBlue}D10S ${ResetColor}$ "
  # ${BoldBlue}\\u = usuario
}

reload_git_prompt_colors "R10_Rivas"